<?xml version="1.0" encoding="utf-8" ?>
<Buildings>

	<ThingDef Name="BuildingBase" Abstract="True">
		<category>Building</category>
		<soundImpactDefault>BulletImpactMetal</soundImpactDefault>
		<selectable>true</selectable>
		<drawerType>MapMeshAndRealTime</drawerType>
		<terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
		<repairEffect>Repair</repairEffect>
		<leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
		<filthLeaving>BuildingRubble</filthLeaving>
	</ThingDef>

	<ThingDef ParentName="BuildingBase">
		<defName>Test_DataTerminal</defName>
		<thingClass>Computing.Building_Terminal</thingClass>
		<label>Terminal</label>
		<description>A terminal used to control other connected devices.</description>
		<graphicData>
			<texPath>Things/Building/Joy/TubeTelevision</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
		</graphicData>
		<altitudeLayer>Building</altitudeLayer>
		<passability>Impassable</passability>
		<pathCost>150</pathCost>
		<blockWind>false</blockWind>
		<fillPercent>0.8</fillPercent>
		<castEdgeShadows>true</castEdgeShadows>
		<statBases>
			<MaxHitPoints>350</MaxHitPoints>
			<WorkToMake>1800</WorkToMake>
			<Flammability>0.0</Flammability>
			<Beauty>12</Beauty>
		</statBases>
		<tickerType>Normal</tickerType>
		<size>(1,1)</size>
		<selectable>true</selectable>
		<rotatable>true</rotatable>
		<designationCategory>Power</designationCategory>
		<building>
			<ignoreNeedsPower>true</ignoreNeedsPower>
		</building>
		<costList>
			<Steel>12</Steel>
		</costList>
		<constructEffect>ConstructMetal</constructEffect>
		<killedLeavings>
			<ChunkSlagSteel>1</ChunkSlagSteel>
		</killedLeavings>
